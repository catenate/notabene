nb improve food glaze chocolate
[REACTION:GLAZE_FOOD_CHOCOLATE]
	[NAME:glaze food with chocolate]
	[BUILDING:KITCHEN:CUSTOM_SHIFT_C]
	[REAGENT:glaze:1:GLOB:NONE:NONE:NONE:NONE]
		[REACTION_CLASS:COUVERTURE_CRAFT]
		[HAS_MATERIAL_REACTION_PRODUCT:COUVERTURE_MAT]
	[REAGENT:food:1:FOOD:NONE:NONE:NONE]
		[NOT_IMPROVED]
		[PRESERVE_REAGENT]
	[IMPROVEMENT:100:food:GLAZED:GET_MATERIAL_FROM_REAGENT:glaze:COUVERTURE_MAT]
	[SKILL:GLAZING]

[REACTION:GLAZE_FOOD_COUVERTURE]
	[NAME:glaze food with couverture]
	[BUILDING:KITCHEN:CUSTOM_SHIFT_F]
	[REAGENT:glaze:1:GLOB:NONE:PLANT_MAT:CACAO_THEOBROMA:NONE]
		[REACTION_CLASS:COUVERTURE_CRAFT]
		[HAS_MATERIAL_REACTION_PRODUCT:COUVERTURE_MAT]
	[REAGENT:food:1:FOOD:NONE:NONE:NONE]
		[NOT_IMPROVED]
		[PRESERVE_REAGENT]
	[IMPROVEMENT:100:food:GLAZED:GET_MATERIAL_FROM_REAGENT:glaze:COUVERTURE_MAT]
	[SKILL:GLAZING]


