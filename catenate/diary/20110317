nb parse date time perl cpan library
http://search.cpan.org/~gbarr/TimeDate-1.20/lib/Date/Parse.pm

use Date::Parse; 
$time = str2time($date); 
($ss,$mm,$hh,$day,$month,$year,$zone) = strptime($date);


